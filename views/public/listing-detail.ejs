<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <meta name="description" content="<%= business.business_name %> - <%= business.category_name %> in <%= business.suburb %>, <%= business.state %>. Read patient reviews and book an appointment.">
    <meta name="keywords" content="<%= business.category_name %>, <%= business.suburb %>, <%= business.state %>, healthcare, medical, practitioner">
    <link rel="stylesheet" href="/stylesheets/dist.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Schema.org JSON-LD Markup -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "MedicalClinic",
        "name": "<%= business.business_name %>",
        "description": "<%= business.description || 'Professional healthcare services' %>",
        "address": {
            "@type": "PostalAddress",
            "streetAddress": "<%= business.address || '' %>",
            "addressLocality": "<%= business.suburb %>",
            "addressRegion": "<%= business.state %>",
            "postalCode": "<%= business.postcode %>",
            "addressCountry": "AU"
        },
        "telephone": "<%= business.phone || '' %>",
        "url": "<%= business.website || '' %>",
        "medicalSpecialty": "<%= business.category_name %>",
        "provider": {
            "@type": "Physician",
            "name": "<%= business.business_name %>",
            "medicalSpecialty": "<%= business.category_name %>"
        },
        <% if (business.avg_rating && business.review_count > 0) { %>
        "aggregateRating": {
            "@type": "AggregateRating",
            "ratingValue": "<%= business.avg_rating.toFixed(1) %>",
            "reviewCount": "<%= business.review_count %>",
            "bestRating": "5",
            "worstRating": "1"
        },
        <% } %>
        <% if (reviews && reviews.length > 0) { %>
        "review": [
            <% reviews.slice(0, 5).forEach((review, index) => { %>
            {
                "@type": "Review",
                "author": {
                    "@type": "Person",
                    "name": "<%= review.reviewer_name %>"
                },
                "reviewRating": {
                    "@type": "Rating",
                    "ratingValue": "<%= review.rating %>",
                    "bestRating": "5",
                    "worstRating": "1"
                },
                "reviewBody": "<%= review.comment || 'No comment provided' %>",
                "datePublished": "<%= new Date(review.created_at).toISOString() %>"
            }<%= index < Math.min(reviews.length, 5) - 1 ? ',' : '' %>
            <% }); %>
        ]
        <% } %>
    }
    </script>
</head>
<body class="bg-background">
    <!-- Navigation -->
    <nav class="bg-white shadow-md fixed top-0 left-0 right-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <a href="/" class="text-2xl font-heading font-bold text-primary">
                        FixMySpine
                    </a>
                </div>
                <div class="hidden md:block">
                    <div class="ml-10 flex items-baseline space-x-4">
                        <a href="/" class="text-text hover:text-primary px-3 py-2 rounded-md text-sm font-medium">Home</a>
                        <a href="/category/chiropractor" class="text-text hover:text-primary px-3 py-2 rounded-md text-sm font-medium">Chiropractors</a>
                        <a href="/category/physiotherapist" class="text-text hover:text-primary px-3 py-2 rounded-md text-sm font-medium">Physiotherapists</a>
                        <% if (typeof user !== 'undefined' && user) { %>
                            <a href="/dashboard" class="text-text hover:text-primary px-3 py-2 rounded-md text-sm font-medium">Dashboard</a>
                            <% if (user.isAdmin) { %>
                                <a href="/admin/dashboard" class="text-text hover:text-primary px-3 py-2 rounded-md text-sm font-medium">Admin</a>
                            <% } %>
                            <a href="/logout" class="btn-secondary">Logout</a>
                        <% } else { %>
                            <a href="/login" class="text-text hover:text-primary px-3 py-2 rounded-md text-sm font-medium">Login</a>
                            <a href="/register" class="btn-primary">Register</a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Breadcrumb -->
    <div class="bg-white border-b border-border pt-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <nav class="flex" aria-label="Breadcrumb">
                <ol class="flex items-center space-x-2">
                    <li><a href="/" class="text-primary hover:text-primary/80">Home</a></li>
                    <li class="text-muted">/</li>
                    <li><a href="/category/<%= business.category_slug %>" class="text-primary hover:text-primary/80"><%= business.category_name %>s</a></li>
                    <li class="text-muted">/</li>
                    <li class="text-muted"><%= business.business_name %></li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Left Column - Main Content -->
            <div class="lg:col-span-2 space-y-8">
                <!-- Header Section -->
                <div class="card">
                    <div class="flex flex-col md:flex-row md:items-start gap-6">
                        <!-- Practitioner Photo/Initial -->
                        <div class="flex-shrink-0">
                            <div class="w-24 h-24 bg-primary rounded-full flex items-center justify-center text-white font-bold text-3xl">
                                <%= business.business_name.charAt(0) %>
                            </div>
                        </div>

                        <!-- Header Info -->
                        <div class="flex-1">
                            <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-4">
                                <div>
                                    <h1 class="text-3xl font-heading font-bold text-text mb-2">
                                        <%= business.business_name %>
                                    </h1>
                                    <p class="text-xl text-primary font-medium mb-4">
                                        <%= business.category_name %>
                                    </p>
                                    
                                    <!-- Rating -->
                                    <% if (business.avg_rating && business.review_count > 0) { %>
                                        <div class="rating-stars mb-2">
                                            <% for (let i = 1; i <= 5; i++) { %>
                                                <% if (i <= Math.round(business.avg_rating)) { %>
                                                    <svg class="star" fill="currentColor" viewBox="0 0 20 20">
                                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                                    </svg>
                                                <% } else { %>
                                                    <svg class="star-empty" fill="currentColor" viewBox="0 0 20 20">
                                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                                    </svg>
                                                <% } %>
                                            <% } %>
                                            <span class="ml-2 text-lg font-medium text-text">
                                                <%= business.avg_rating.toFixed(1) %> (<%= business.review_count %> reviews)
                                            </span>
                                        </div>
                                    <% } %>

                                    <!-- Location -->
                                    <div class="flex items-center text-muted mb-4">
                                        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                                        </svg>
                                        <%= business.suburb %>, <%= business.state %> <%= business.postcode %>
                                    </div>

                                    <!-- Contact Info -->
                                    <% if (business.phone) { %>
                                        <div class="flex items-center text-muted mb-2">
                                            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                                            </svg>
                                            <a href="tel:<%= business.phone %>" class="hover:text-primary"><%= business.phone %></a>
                                        </div>
                                    <% } %>

                                    <% if (business.website) { %>
                                        <div class="flex items-center text-muted">
                                            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z" clip-rule="evenodd"/>
                                            </svg>
                                            <a href="<%= business.website %>" target="_blank" rel="noopener noreferrer" class="hover:text-primary">
                                                Visit Website
                                            </a>
                                        </div>
                                    <% } %>
                                </div>

                                <!-- Action Buttons -->
                                <div class="flex flex-col sm:flex-row gap-3 mt-4 sm:mt-0">
                                    <button class="btn-primary">
                                        Book Appointment
                                    </button>
                                    <button class="btn-secondary">
                                        Get Directions
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- About Section -->
                <div class="card">
                    <h2 class="text-2xl font-heading font-bold text-text mb-4">About</h2>
                    <div class="prose max-w-none">
                        <p class="text-text leading-relaxed">
                            <%= business.description || 'Professional healthcare services provided by experienced practitioners. Contact us to learn more about our services and how we can help you.' %>
                        </p>
                    </div>
                </div>

                <!-- Services & Specialties -->
                <div class="card">
                    <h2 class="text-2xl font-heading font-bold text-text mb-4">Services & Specialties</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <h3 class="font-semibold text-text mb-2">Services Offered</h3>
                            <ul class="space-y-2 text-muted">
                                <li class="flex items-center">
                                    <svg class="w-4 h-4 text-primary mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                    </svg>
                                    General Consultation
                                </li>
                                <li class="flex items-center">
                                    <svg class="w-4 h-4 text-primary mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                    </svg>
                                    Treatment Planning
                                </li>
                                <li class="flex items-center">
                                    <svg class="w-4 h-4 text-primary mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                    </svg>
                                    Follow-up Care
                                </li>
                            </ul>
                        </div>
                        <div>
                            <h3 class="font-semibold text-text mb-2">Conditions Treated</h3>
                            <ul class="space-y-2 text-muted">
                                <li class="flex items-center">
                                    <svg class="w-4 h-4 text-primary mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                    </svg>
                                    Back Pain
                                </li>
                                <li class="flex items-center">
                                    <svg class="w-4 h-4 text-primary mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                    </svg>
                                    Neck Pain
                                </li>
                                <li class="flex items-center">
                                    <svg class="w-4 h-4 text-primary mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                    </svg>
                                    Sports Injuries
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Patient Reviews -->
                <% if (reviews && reviews.length > 0) { %>
                    <div class="card">
                        <h2 class="text-2xl font-heading font-bold text-text mb-6">Patient Reviews</h2>
                        <div class="space-y-6">
                            <% reviews.forEach(review => { %>
                                <div class="border-b border-border pb-6 last:border-b-0 last:pb-0">
                                    <div class="flex items-center justify-between mb-3">
                                        <div class="flex items-center">
                                            <div class="w-10 h-10 bg-primary rounded-full flex items-center justify-center text-white font-semibold mr-3">
                                                <%= review.reviewer_name.charAt(0) %>
                                            </div>
                                            <div>
                                                <h4 class="font-semibold text-text"><%= review.reviewer_name %></h4>
                                                <div class="rating-stars">
                                                    <% for (let i = 1; i <= 5; i++) { %>
                                                        <% if (i <= review.rating) { %>
                                                            <svg class="star" fill="currentColor" viewBox="0 0 20 20">
                                                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                                            </svg>
                                                        <% } else { %>
                                                            <svg class="star-empty" fill="currentColor" viewBox="0 0 20 20">
                                                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                                            </svg>
                                                        <% } %>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                        <span class="text-sm text-muted">
                                            <%= new Date(review.created_at).toLocaleDateString() %>
                                        </span>
                                    </div>
                                    <% if (review.comment) { %>
                                        <p class="text-text leading-relaxed"><%= review.comment %></p>
                                    <% } %>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% } %>
            </div>

            <!-- Right Column - Sidebar -->
            <div class="space-y-6">
                <!-- Map -->
                <div class="card">
                    <h3 class="text-lg font-heading font-bold text-text mb-4">Location</h3>
                    <div class="bg-muted/20 rounded-lg h-48 flex items-center justify-center">
                        <div class="text-center">
                            <svg class="w-12 h-12 text-muted mx-auto mb-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                            </svg>
                            <p class="text-muted">Interactive Map</p>
                            <p class="text-sm text-muted"><%= business.suburb %>, <%= business.state %></p>
                        </div>
                    </div>
                </div>

                <!-- Opening Hours -->
                <div class="card">
                    <h3 class="text-lg font-heading font-bold text-text mb-4">Opening Hours</h3>
                    <div class="space-y-2">
                        <div class="flex justify-between">
                            <span class="text-muted">Monday - Friday</span>
                            <span class="text-text font-medium">9:00 AM - 6:00 PM</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-muted">Saturday</span>
                            <span class="text-text font-medium">9:00 AM - 2:00 PM</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-muted">Sunday</span>
                            <span class="text-text font-medium">Closed</span>
                        </div>
                    </div>
                </div>

                <!-- Contact Actions -->
                <div class="card">
                    <h3 class="text-lg font-heading font-bold text-text mb-4">Contact</h3>
                    <div class="space-y-3">
                        <% if (business.phone) { %>
                            <a href="tel:<%= business.phone %>" class="btn-primary w-full text-center block">
                                Call Now
                            </a>
                        <% } %>
                        <% if (business.website) { %>
                            <a href="<%= business.website %>" target="_blank" rel="noopener noreferrer" class="btn-secondary w-full text-center block">
                                Visit Website
                            </a>
                        <% } %>
                        <button class="btn-accent w-full">
                            Book Appointment
                        </button>
                    </div>
                </div>

                <!-- Accreditations -->
                <div class="card">
                    <h3 class="text-lg font-heading font-bold text-text mb-4">Accreditations</h3>
                    <div class="space-y-3">
                        <div class="flex items-center">
                            <div class="w-8 h-8 bg-primary/10 rounded flex items-center justify-center mr-3">
                                <span class="text-primary font-bold text-sm">AHPRA</span>
                            </div>
                            <span class="text-sm text-muted">AHPRA Registered</span>
                        </div>
                        <div class="flex items-center">
                            <div class="w-8 h-8 bg-primary/10 rounded flex items-center justify-center mr-3">
                                <span class="text-primary font-bold text-sm">ACA</span>
                            </div>
                            <span class="text-sm text-muted">Australian Chiropractors Association</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-text text-white py-12 mt-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div>
                    <h3 class="text-xl font-heading font-bold mb-4">FixMySpine</h3>
                    <p class="text-white/80">
                        Connecting Australians with trusted healthcare professionals.
                    </p>
                </div>
                <div>
                    <h4 class="font-semibold mb-4">Quick Links</h4>
                    <ul class="space-y-2">
                        <li><a href="/" class="text-white/80 hover:text-white">Home</a></li>
                        <li><a href="/search" class="text-white/80 hover:text-white">Search</a></li>
                        <li><a href="/category/chiropractor" class="text-white/80 hover:text-white">Chiropractors</a></li>
                        <li><a href="/category/physiotherapist" class="text-white/80 hover:text-white">Physiotherapists</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="font-semibold mb-4">For Practitioners</h4>
                    <ul class="space-y-2">
                        <li><a href="/register" class="text-white/80 hover:text-white">Register</a></li>
                        <li><a href="/login" class="text-white/80 hover:text-white">Login</a></li>
                        <li><a href="/dashboard" class="text-white/80 hover:text-white">Dashboard</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="font-semibold mb-4">Contact</h4>
                    <p class="text-white/80">
                        Email: info@fixmyspine.com.au<br>
                        Phone: 1300 FIX SPINE
                    </p>
                </div>
            </div>
            <div class="border-t border-white/20 mt-8 pt-8 text-center">
                <p class="text-white/80">&copy; 2024 FixMySpine. All rights reserved.</p>
            </div>
        </div>
    </footer>
</body>
</html>
