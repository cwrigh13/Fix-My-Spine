<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/dist.css?v=7">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-background">
    <!-- Navigation -->
    <nav class="bg-white shadow-md fixed top-0 left-0 right-0 z-50">
        <div class="max-w-5xl mx-auto px-3 sm:px-4 lg:px-6 w-full">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <a href="/" class="text-2xl font-heading font-bold text-primary">
                        FixMySpine
                    </a>
                </div>
                
                <!-- Desktop Navigation -->
                <div class="hidden md:block">
                    <div class="ml-10 flex items-baseline space-x-4">
                        <a href="/" class="text-text hover:text-primary px-3 py-2 rounded-md text-sm font-medium">Home</a>
                        <a href="/about" class="text-text hover:text-primary px-3 py-2 rounded-md text-sm font-medium">About</a>
                        <a href="/blog/" class="text-text hover:text-primary px-3 py-2 rounded-md text-sm font-medium">Blog</a>
                        <a href="/contact" class="text-text hover:text-primary px-3 py-2 rounded-md text-sm font-medium">Contact</a>
                        <% if (typeof user !== 'undefined' && user) { %>
                            <a href="/dashboard" class="text-primary font-semibold px-3 py-2 rounded-md text-sm">Dashboard</a>
                            <% if (user.isAdmin) { %>
                                <a href="/admin/dashboard" class="text-text hover:text-primary px-3 py-2 rounded-md text-sm font-medium">Admin</a>
                            <% } %>
                            <a href="/logout" class="btn-secondary">Logout</a>
                        <% } else { %>
                            <a href="/login" class="text-text hover:text-primary px-3 py-2 rounded-md text-sm font-medium">Login</a>
                            <a href="/register" class="btn-primary">List Your Practice</a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="pt-32 pb-16 min-h-screen">
        <div class="max-w-5xl mx-auto px-3 sm:px-4 lg:px-6 w-full">
            <!-- Header -->
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
                <div>
                    <h1 class="text-3xl md:text-4xl font-heading font-bold text-text mb-2">Business Dashboard</h1>
                    <p class="text-muted">Welcome back, <%= user.name %>! Manage your business listings below.</p>
                </div>
                <div class="flex flex-wrap gap-3">
                    <a href="/dashboard/billing" class="btn-primary">Manage Billing</a>
                    <a href="/dashboard/submit" class="btn-accent">Submit New Listing</a>
                </div>
            </div>
            
            <% if (typeof successMessage !== 'undefined' && successMessage) { %>
                <div class="bg-green-50 border-l-4 border-green-500 text-green-800 p-4 mb-6 rounded">
                    <%= successMessage %>
                </div>
            <% } %>
            
            <!-- Listings Table or Empty State -->
            <% if (listings && listings.length > 0) { %>
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-text text-white">
                                <tr>
                                    <th class="px-6 py-4 text-left text-sm font-semibold">Business Name</th>
                                    <th class="px-6 py-4 text-left text-sm font-semibold">Category</th>
                                    <th class="px-6 py-4 text-left text-sm font-semibold">Location</th>
                                    <th class="px-6 py-4 text-left text-sm font-semibold">Tier</th>
                                    <th class="px-6 py-4 text-left text-sm font-semibold">Subscription</th>
                                    <th class="px-6 py-4 text-left text-sm font-semibold">Status</th>
                                    <th class="px-6 py-4 text-left text-sm font-semibold">Created</th>
                                    <th class="px-6 py-4 text-left text-sm font-semibold">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                                <% listings.forEach(function(listing) { %>
                                    <tr class="hover:bg-secondary transition-colors">
                                        <td class="px-6 py-4">
                                            <div class="font-semibold text-text"><%= listing.business_name %></div>
                                            <% if (listing.address) { %>
                                                <div class="text-sm text-muted mt-1"><%= listing.address %></div>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4 text-sm text-text"><%= listing.category_name %></td>
                                        <td class="px-6 py-4 text-sm text-text"><%= listing.suburb %>, <%= listing.state %> <%= listing.postcode %></td>
                                        <td class="px-6 py-4">
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold uppercase <%= listing.listing_tier === 'premium' ? 'bg-yellow-500 text-white' : 'bg-gray-200 text-gray-700' %>">
                                                <%= listing.listing_tier %>
                                            </span>
                                        </td>
                                        <td class="px-6 py-4">
                                            <% if (listing.subscription_status) { %>
                                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold uppercase <%= listing.subscription_status === 'active' ? 'bg-green-100 text-green-800' : (listing.subscription_status === 'past_due' ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800') %>">
                                                    <%= listing.subscription_status.replace('_', ' ') %>
                                                </span>
                                                <% if (listing.subscription_ends_at) { %>
                                                    <div class="text-xs text-muted mt-1">
                                                        Expires: <%= new Date(listing.subscription_ends_at).toLocaleDateString() %>
                                                    </div>
                                                <% } %>
                                            <% } else { %>
                                                <span class="text-xs text-muted">No subscription</span>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4">
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold uppercase <%= listing.is_approved ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                                                <%= listing.is_approved ? 'Approved' : 'Pending' %>
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 text-sm text-text"><%= new Date(listing.created_at).toLocaleDateString() %></td>
                                        <td class="px-6 py-4">
                                            <div class="flex gap-2">
                                                <a href="/dashboard/listings/<%= listing.id %>/edit" class="text-primary hover:text-primary/80 text-sm font-medium underline">Edit</a>
                                                <button type="button" onclick="confirmDelete(<%= listing.id %>, '<%= listing.business_name.replace(/'/g, "\\'") %>')" class="text-red-600 hover:text-red-800 text-sm font-medium underline bg-transparent border-0 cursor-pointer">Delete</button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            <% } else { %>
                <div class="bg-white rounded-lg shadow-md p-12 text-center">
                    <h2 class="text-2xl font-heading font-bold text-text mb-4">No Listings Yet</h2>
                    <p class="text-muted mb-6">You haven't submitted any business listings yet.</p>
                    <a href="/dashboard/submit" class="btn-primary inline-block">Submit Your First Listing</a>
                </div>
            <% } %>
            
            <!-- Pricing Information Section -->
