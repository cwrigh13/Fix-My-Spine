<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/dist.css?v=7">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-background">
    <!-- Navigation -->
    <nav class="bg-white shadow-md fixed top-0 left-0 right-0 z-50">
        <div class="max-w-5xl mx-auto px-3 sm:px-4 lg:px-6 w-full">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <a href="/" class="text-2xl font-heading font-bold text-primary">
                        FixMySpine
                    </a>
                </div>
                
                <!-- Desktop Navigation -->
                <div class="hidden md:block">
                    <div class="ml-10 flex items-baseline space-x-4">
                        <a href="/" class="text-text hover:text-primary px-3 py-2 rounded-md text-sm font-medium">Home</a>
                        <a href="/about" class="text-text hover:text-primary px-3 py-2 rounded-md text-sm font-medium">About</a>
                        <a href="/blog/" class="text-text hover:text-primary px-3 py-2 rounded-md text-sm font-medium">Blog</a>
                        <a href="/contact" class="text-text hover:text-primary px-3 py-2 rounded-md text-sm font-medium">Contact</a>
                        <% if (typeof user !== 'undefined' && user) { %>
                            <a href="/dashboard" class="text-primary font-semibold px-3 py-2 rounded-md text-sm">Dashboard</a>
                            <% if (user.isAdmin) { %>
                                <a href="/admin/dashboard" class="text-text hover:text-primary px-3 py-2 rounded-md text-sm font-medium">Admin</a>
                            <% } %>
                            <a href="/logout" class="btn-secondary">Logout</a>
                        <% } else { %>
                            <a href="/login" class="text-text hover:text-primary px-3 py-2 rounded-md text-sm font-medium">Login</a>
                            <a href="/register" class="btn-primary">List Your Practice</a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="pt-32 pb-16 min-h-screen">
        <div class="max-w-5xl mx-auto px-3 sm:px-4 lg:px-6 w-full">
            <!-- Header -->
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
                <div>
                    <h1 class="text-3xl md:text-4xl font-heading font-bold text-text mb-2">Billing Management</h1>
                    <p class="text-muted">Manage your subscriptions and upgrade your listings</p>
                </div>
                <a href="/dashboard" class="btn-secondary inline-flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                    Back to Dashboard
                </a>
            </div>
            
            <!-- Statistics Cards -->
            <div class="grid grid-cols-2 gap-6 mb-8">
                <div class="bg-white rounded-lg shadow-md p-6 text-center">
                    <div class="text-3xl font-bold text-text mb-2"><%= stats.total_listings %></div>
                    <div class="text-sm text-muted uppercase tracking-wide">Total Listings</div>
                </div>
                <div class="bg-white rounded-lg shadow-md p-6 text-center">
                    <div class="text-3xl font-bold text-yellow-600 mb-2"><%= stats.premium_listings %></div>
                    <div class="text-sm text-muted uppercase tracking-wide">Premium Listings</div>
                </div>
                <div class="bg-white rounded-lg shadow-md p-6 text-center">
                    <div class="text-3xl font-bold text-accent mb-2"><%= stats.active_subscriptions %></div>
                    <div class="text-sm text-muted uppercase tracking-wide">Active Subscriptions</div>
                </div>
                <div class="bg-white rounded-lg shadow-md p-6 text-center">
                    <div class="text-3xl font-bold text-red-600 mb-2"><%= stats.past_due_subscriptions %></div>
                    <div class="text-sm text-muted uppercase tracking-wide">Past Due</div>
                </div>
            </div>
            
            <!-- Listings Table or Empty State -->
            <% if (listings && listings.length > 0) { %>
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-text text-white">
                                <tr>
                                    <th class="px-6 py-4 text-left text-sm font-semibold">Business Name</th>
                                    <th class="px-6 py-4 text-left text-sm font-semibold">Location</th>
                                    <th class="px-6 py-4 text-left text-sm font-semibold">Tier</th>
                                    <th class="px-6 py-4 text-left text-sm font-semibold">Subscription Status</th>
                                    <th class="px-6 py-4 text-left text-sm font-semibold">Expires</th>
                                    <th class="px-6 py-4 text-left text-sm font-semibold">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                                <% listings.forEach(function(listing) { %>
                                    <tr class="hover:bg-secondary transition-colors">
                                        <td class="px-6 py-4">
                                            <div class="font-semibold text-text"><%= listing.business_name %></div>
                                            <div class="text-sm text-muted mt-1"><%= listing.category_name %></div>
                                        </td>
                                        <td class="px-6 py-4 text-sm text-text">
                                            <%= listing.suburb %>, <%= listing.state %> <%= listing.postcode %>
                                        </td>
                                        <td class="px-6 py-4">
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold uppercase <%= listing.listing_tier === 'premium' ? 'bg-yellow-500 text-white' : 'bg-gray-200 text-gray-700' %>">
                                                <%= listing.listing_tier.charAt(0).toUpperCase() + listing.listing_tier.slice(1) %>
                                            </span>
                                        </td>
                                        <td class="px-6 py-4">
                                            <% if (listing.subscription_status) { %>
                                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold uppercase <%= listing.subscription_status === 'active' ? 'bg-green-100 text-green-800' : (listing.subscription_status === 'past_due' ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800') %>">
                                                    <%= listing.subscription_status.replace('_', ' ').split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') %>
                                                </span>
                                            <% } else { %>
                                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold uppercase bg-gray-100 text-gray-700">
                                                    No Subscription
                                                </span>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4">
                                            <% if (listing.subscription_ends_at) { %>
                                                <div class="text-sm text-text">
                                                    <%= new Date(listing.subscription_ends_at).toLocaleDateString() %>
                                                </div>
                                                <% 
                                                    const expiryDate = new Date(listing.subscription_ends_at);
                                                    const today = new Date();
                                                    const daysUntilExpiry = Math.ceil((expiryDate - today) / (1000 * 60 * 60 * 24));
                                                    
                                                    if (daysUntilExpiry <= 7 && daysUntilExpiry > 0) {
                                                %>
                                                    <div class="mt-1 text-xs bg-yellow-50 text-yellow-800 px-2 py-1 rounded inline-block">
                                                        ⚠️ <%= daysUntilExpiry %> day<%= daysUntilExpiry !== 1 ? 's' : '' %> left
                                                    </div>
                                                <% } else if (daysUntilExpiry <= 0) { %>
                                                    <div class="mt-1 text-xs bg-red-50 text-red-800 px-2 py-1 rounded inline-block">
                                                        🚨 Expired
                                                    </div>
                                                <% } %>
                                            <% } else { %>
                                                <span class="text-sm text-muted">—</span>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4">
                                            <div class="flex flex-wrap gap-2">
                                                <% if (listing.listing_tier === 'free' && listing.subscription_status !== 'active') { %>
                                                    <button 
                                                        type="button"
                                                        onclick="upgradeToPremium(<%= listing.id %>)" 
                                                        class="text-sm bg-accent hover:bg-accent/90 text-white px-4 py-2 rounded-lg font-bold transition-all shadow-md hover:shadow-lg hover:scale-105 border-0 cursor-pointer"
                                                    >
                                                        Upgrade to Premium
                                                    </button>
                                                <% } else if (listing.subscription_status === 'active') { %>
                                                    <a 
                                                        href="/dashboard/subscription/portal" 
                                                        class="text-xs bg-primary hover:bg-primary/90 text-white px-3 py-2 rounded font-semibold transition inline-block"
                                                    >
                                                        Manage Subscription
                                                    </a>
                                                    <button 
                                                        type="button"
                                                        onclick="checkSubscriptionStatus(<%= listing.id %>)" 
                                                        class="text-xs bg-yellow-600 hover:bg-yellow-700 text-white px-3 py-2 rounded font-semibold transition border-0 cursor-pointer"
                                                    >
                                                        Check Status
                                                    </button>
                                                <% } else if (listing.subscription_status === 'past_due') { %>
                                                    <a 
                                                        href="/dashboard/subscription/portal" 
                                                        class="text-xs bg-yellow-600 hover:bg-yellow-700 text-white px-3 py-2 rounded font-semibold transition inline-block"
                                                    >
                                                        Update Payment
                                                    </a>
                                                <% } else if (listing.subscription_status === 'cancelled') { %>
                                                    <button 
                                                        type="button"
                                                        onclick="reactivateSubscription(<%= listing.id %>)" 
                                                        class="text-xs bg-accent hover:bg-accent/90 text-white px-3 py-2 rounded font-semibold transition border-0 cursor-pointer"
                                                    >
                                                        Reactivate
                                                    </button>
                                                <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            <% } else { %>
                <div class="bg-white rounded-lg shadow-md p-12 text-center">
                    <h2 class="text-2xl font-heading font-bold text-text mb-4">No Business Listings</h2>
                    <p class="text-muted mb-6">You haven't created any business listings yet.</p>
                    <a href="/dashboard/submit" class="btn-primary inline-block">Create Your First Listing</a>
                </div>
            <% } %>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-text text-white py-12">
        <div class="max-w-5xl mx-auto px-3 sm:px-4 lg:px-6 w-full">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div>
                    <p class="text-xl font-heading font-bold mb-4">FixMySpine</p>
                    <p class="text-white/80">
                        Connecting Australians with trusted healthcare professionals.
                    </p>
                </div>
                <div>
                    <p class="font-semibold mb-4">Company</p>
                    <ul class="space-y-2">
                        <li><a href="/about" class="text-white/80 hover:text-white">About Us</a></li>
                        <li><a href="/contact" class="text-white/80 hover:text-white">Contact</a></li>
                    </ul>
                </div>
                <div>
                    <p class="font-semibold mb-4">For Practitioners</p>
                    <ul class="space-y-2">
                        <li><a href="/register" class="text-white/80 hover:text-white">Register</a></li>
                        <li><a href="/login" class="text-white/80 hover:text-white">Login</a></li>
                        <li><a href="/dashboard" class="text-white/80 hover:text-white">Dashboard</a></li>
                    </ul>
                </div>
                <div>
                    <p class="font-semibold mb-4">Legal</p>
                    <ul class="space-y-2">
                        <li><a href="/terms-of-service" class="text-white/80 hover:text-white">Terms of Service</a></li>
                        <li><a href="/privacy-policy" class="text-white/80 hover:text-white">Privacy Policy</a></li>
                    </ul>
                </div>
            </div>
            <div class="border-t border-white/20 mt-8 pt-8 text-center">
                <p class="text-white/80">&copy; 2025 FixMySpine. All rights reserved.</p>
            </div>
        </div>
    </footer>
    
    <script>
        function upgradeToPremium(businessId) {
            if (confirm('Upgrade this listing to premium? This will create an annual subscription.')) {
                fetch('/dashboard/subscription/create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        business_id: businessId
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.sessionId) {
                        // Redirect to Stripe Checkout
                        window.location.href = data.url;
                    } else {
                        alert('Error: ' + (data.error || 'Failed to create subscription'));
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while creating the subscription');
                });
            }
        }
        
        function checkSubscriptionStatus(businessId) {
            fetch(`/dashboard/subscription/status/${businessId}`)
                .then(response => response.json())
                .then(data => {
                    let message = `Business ID: ${data.business_id}\n`;
                    message += `Listing Tier: ${data.listing_tier}\n`;
                    message += `Subscription Status: ${data.subscription_status || 'None'}\n`;
                    if (data.subscription_ends_at) {
                        message += `Expires: ${new Date(data.subscription_ends_at).toLocaleDateString()}\n`;
                    }
                    message += `Has Subscription: ${data.has_subscription ? 'Yes' : 'No'}`;
                    alert(message);
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to get subscription status');
                });
        }
        
        function reactivateSubscription(businessId) {
            if (confirm('Reactivate premium subscription for this listing?')) {
                // Redirect to subscription creation
                upgradeToPremium(businessId);
            }
        }
    </script>
</body>
</html>
